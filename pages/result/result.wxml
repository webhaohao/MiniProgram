<!--pages/result/result.wxml-->

<view class="main">
      <view class="logo"><image src="../images/logo.png" mode="widthFix"></image></view>
      <view class="title">
            <image src="../images/title.png" alt="" mode="widthFix"></image>
      </view>
      <view class="info">
            <image src="../images/msg.png" mode="widthFix"></image>   
      </view>
      <view class="result">
            <image src="{{info.title}}" mode="widthFix"></image>      
      </view>
      <view class="comment">
            <view class="comment_con">
                     <image src="{{info.des}}" mode="widthFix"></image>
            </view>    
      </view>
      <view class="create">
              <view bindtap='saveImageToPhotosAlbum'>
                    <image src="../images/btn2_bg.png" mode="widthFix"></image>
              </view>    
      </view>
      <view class="msg">
              <view>
                    <image src="../images/code.png"  mode="widthFix"></image>
              </view>
      </view>
      <canvas canvas-id='share' style='width:750px;height:1334px'  hidden='{{canvasHidden}}'></canvas>
</view>